<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_image_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/card_bg01" />

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_alignTop="@+id/card_image"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        tools:text="My First Post" />

    <TextView
        android:id="@+id/blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/post_title"
        android:textColor="@color/white"
        tools:text="blood type" />

    <TextView
        android:id="@+id/place_of_transplantation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/blood_type"
        android:maxLines="1"
        android:textColor="@color/white"
        tools:text="place_of_transplantation" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/place_of_transplantation"
        android:maxLines="2"
        android:textColor="@color/white"
        tools:text="address" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/address"
        android:textColor="@color/white"
        tools:text="phone" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/phone"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        tools:text="@string/lorem" />
</RelativeLayout>
