<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@color/material_green_600"/>

    <TextView
        android:id="@+id/donor_list_text_view"
        android:layout_below="@+id/separator1"
        android:text="@string/donor_list"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_donor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donor_list_text_view"
        tools:listitem="@layout/mainact_post_item_comment" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/recycler_donor_list"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@color/material_green_600"/>

</RelativeLayout>
